rm:usage() {
    echo "Remove topics from a given repository"
}

rm:help() {
    echo -e "$(rm:usage)

${BOLD}USAGE${RESET}
    gh topic rm [flags]

${BOLD}FLAGS${RESET}
    -r | --reponame <name>    A repository name or repository namespaced by the org name (Eg: org/reponame)
         --names    <names>   Common separated list of topic names to remove
"
}
